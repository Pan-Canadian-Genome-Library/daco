{
	"extends": "../tsconfig.apps.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"noEmit": true,

		/* Bundler mode */
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/assets/*": ["./src/assets/*"],
			"@/components/*": ["./src/components/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/global/*": ["./src/global/*"]
		}
	},
	"include": ["src", "vite.config.ts"]
}

{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],

		/* Bundler mode */
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/assets/*": ["./src/assets/*"],
			"@/components/*": ["./src/components/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/hooks/*": ["./src/hooks/*"]
		}
	},
	"include": ["src", "vite.config.ts"]
}

{
	"name": "@pcgl-daco/api",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "rimraf ./dist && tsc -p './tsconfig.build.json'",
		"build:tests": "rimraf ./dist && tsc",
		"dev": "concurrently --names=server,watch \"pnpm dev:server\" \"pnpm dev:watch\"",
		"dev:server": "tsx watch --clear-screen=false --env-file=.env ./src/main.ts",
		"dev:watch": "nx watch --projects=@pcgl-daco/api --includeDependentProjects -- nx run-many -t build \\$NX_PROJECT_NAME --exclude=@pcgl-daco/api",
		"dbml": "tsx ./src/db/dbml.ts",
		"setup": "pnpm setup:env && pnpm setup:db",
		"setup:db": "pnpm migrate",
		"setup:env": "cp -n .env.schema .env",
		"migrate": "pnpm drizzle-kit migrate",
		"start:prod": "pnpm migrate && tsx ./src/main.js",
		"test": "tsx --test --test-reporter=spec --experimental-test-coverage ./tests/**/**/*.test.ts",
		"test:unit": "pnpm run test:unit:api && pnpm run test:unit:services",
		"test:unit:api": "tsx --test --test-reporter=spec --experimental-test-coverage ./tests/unit/api/*.test.ts",
		"test:unit:services": "tsx --test --test-reporter=spec --experimental-test-coverage ./tests/unit/services/*.test.ts",
		"test:unit:functions": "tsx --test --test-reporter=spec --experimental-test-coverage ./tests/functions/*.test.ts",
		"test:integration": "pnpm run test:int:api && pnpm run test:int:db && pnpm run test:int:services",
		"test:int:api": "tsx --test --test-reporter=spec --experimental-test-coverage ./tests/integration/api/*.test.ts",
		"test:int:db": "tsx --test --test-reporter=spec --experimental-test-coverage ./tests/integration/db/*.test.ts",
		"test:int:services": "tsx --test --test-reporter=spec --experimental-test-coverage ./tests/integration/services/*.test.ts",
		"test:local": "pnpm run test:api && pnpm run test:db && pnpm run test:services"
	},
	"devDependencies": {
		"@testcontainers/postgresql": "^10.18.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/express-session": "^1.18.1",
		"@types/formidable": "^3.4.5",
		"@types/node": "^22.13.4",
		"@types/pg": "^8.11.11",
		"@types/swagger-ui-express": "^4.1.7",
		"@types/yamljs": "^0.2.34",
		"drizzle-dbml-generator": "^0.9.0",
		"drizzle-kit": "^0.30.4",
		"ts-case-convert": "^2.1.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@pcgl-daco/data-model": "workspace:^",
		"@pcgl-daco/logger": "workspace:^",
		"@pcgl-daco/request-utils": "workspace:^",
		"@pcgl-daco/validation": "workspace:^",
		"axios": "^1.7.9",
		"connect-redis": "^8.0.1",
		"cors": "^2.8.5",
		"drizzle-orm": "^0.39.1",
		"drizzle-zod": "^0.7.0",
		"express": "^4.21.0",
		"express-session": "^1.18.1",
		"formidable": "^3.5.2",
		"ioredis": "^5.5.0",
		"pg": "^8.13.0",
		"swagger-ui-express": "^5.0.1",
		"typescript-fsm": "^1.4.5",
		"url-join": "^5.0.0",
		"yamljs": "^0.3.0",
		"zod": "^3.24.2"
	},
	"engines": {
		"node": "^20.9.0"
	}
}

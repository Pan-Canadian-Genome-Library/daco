{
	"compilerOptions": {
		"module": "ESNext",
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true
	},
	"include": ["src"]
}
